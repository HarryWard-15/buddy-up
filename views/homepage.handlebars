{{!-- Welcome bar --}}

<div class="container" id="welcome bar">
   <div class="row">
      <div class="col-6">
         <h2>Welcome {{user_name}}</h2>
      </div>
      <div class="col">
         <a role="button" class="btn btn-secondary float-end" href="/find-a-buddy">Find Buddy</a>
         <a role="button" class="btn btn-secondary float-end" href="/requests">New Request</a>
      </div>
   </div>
</div>
{{!-- Games Cards --}}

<!-- Loop over each object in the games array -->
<div class="container">
   <div class="row d-flex justify-content-between">
      {{#each games as |game| }}
      {{!-- each card is the link to open a modal --}}

      <div class="card" style="background-image: url('{{image}}'); ">
         <a href="/game/{{game.id}}">
            <div class="card-body ">
               {{!-- <img class="card-img-top" src="{{image}}" style="height: 10rem;" alt="Card image cap"> --}}
               <h5 class="card-title">{{game.name}}</h5>
            </div>
         </a>
      </div>

      {{/each}}
   </div>